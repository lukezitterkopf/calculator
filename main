        public class Addition
        {
            public static int Add()
            {
                Console.WriteLine("x =");
                int x = Convert.ToInt32(Console.ReadLine());

                Console.WriteLine("y =");
                int y = Convert.ToInt32(Console.ReadLine());

                int sum = x + y;
                Console.WriteLine("result: {0}", sum);
                result = sum;
                return result;
            }
        }
